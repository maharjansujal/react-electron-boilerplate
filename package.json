{
  "name": "react-electron",
  "version": "1.0.0",
  "main": "dist/main.js",
  "description": "React Electron Desktop App",
  "author": "Sujal",
  "license": "MIT",
  "scripts": {
    "build:main": "webpack --config webpack.config.js --mode production",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "build:preload": "webpack --config webpack.preload.config.js --mode production",
    "build": "npm run build:renderer && npm run build:preload && npm run build:main",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.react.electron",
    "productName": "React Electron",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist/main.js"
    },
    "asar": true,
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/react": "^19.1.15",
    "@types/react-dom": "^19.1.9",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "electron": "^38.2.0",
    "electron-builder": "^24.13.3",
    "html-webpack-plugin": "^5.6.4",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.19",
    "ts-loader": "^9.5.4",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "typescript": "^5.3.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  }
}
